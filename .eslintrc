{
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:prettier/recommended"
	],
	"plugins": [
		"@typescript-eslint",
		"prettier"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 2020,
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"es6": true,
		"node": true,
		"mocha": true,
		"browser": true
	},
	"settings": {
		"import/extensions": [
			".js",
			".ts"
		]
	},
	"rules": {
		"@typescript-eslint/no-explicit-any": "off"
	}
}

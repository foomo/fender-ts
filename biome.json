{
	"$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noImplicitAnyLet": "off",
				"noAssignInExpressions": "off"
			},
			"complexity": {},
			"style": {
				"noUselessElse": "off",
				"useDefaultParameterLast": "off"
			},
			"correctness": {},
			"a11y": {},
			"security": {},
			"performance": {}
		}
	},
	"formatter": {
		"lineWidth": 80
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	},
	"files": {
		"ignore": [".idea/**", ".vscode/**"]
	}
}
